<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/collegeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="College Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/collegeTitle"
            android:layout_alignParentStart="true"
            android:text="id" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id"
            android:layout_alignParentStart="true"
            android:text="state" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/state"
            android:layout_alignParentStart="true"
            android:text="city" />

        <TextView
            android:id="@+id/zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_alignParentStart="true"
            android:text="zip" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zip"
            android:layout_alignParentStart="true"
            android:text="url" />

        <TextView
            android:id="@+id/inStateTuition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/url"
            android:layout_alignParentStart="true"
            android:text="in state tuition" />

        <TextView
            android:id="@+id/outOfStateTuition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inStateTuition"
            android:layout_alignParentStart="true"
            android:text="out of state tuition" />

        <TextView
            android:id="@+id/reading25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/outOfStateTuition"
            android:layout_alignParentStart="true"
            android:text="reading 25th percentile" />

        <TextView
            android:id="@+id/reading75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reading25"
            android:layout_alignParentStart="true"
            android:text="reading 75th percentile" />

        <TextView
            android:id="@+id/math25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reading75"
            android:layout_alignParentStart="true"
            android:text="math 25th percentile" />

        <TextView
            android:id="@+id/math75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/math25"
            android:layout_alignParentStart="true"
            android:text="math 75th percentile" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>